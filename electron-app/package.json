{
  "name": "almajd-meet-desktop",
  "version": "1.0.0",
  "description": "Almajd Academy Desktop Video Conferencing App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64 --ia32",
    "build:win64": "electron-builder --win --x64",
    "build:win32": "electron-builder --win --ia32",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "video-conferencing",
    "livekit",
    "electron",
    "desktop"
  ],
  "author": "Almajd Academy",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "build": {
    "appId": "com.almajdacademy.meet",
    "productName": "Almajd Meet",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!*.md",
      "!test-setup.js",
      "!advanced-index.html",
      "!production-index.html",
      "!screen-capture-polyfill.js",
      "!build-windows.sh",
      "!install.sh"
    ],
    "mac": {
      "category": "public.app-category.video-conferencing",
      "target": ["dmg", "zip"],
      "icon": "assets/icon.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "zip",
          "arch": ["x64", "ia32"]
        }
      ],
      "publisherName": "Almajd Academy",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Almajd Meet",
      "license": "LICENSE"
    },
    "portable": {
      "artifactName": "Almajd-Meet-${version}-${arch}-portable.exe"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icon.png",
      "category": "Network"
    }
  }
}
